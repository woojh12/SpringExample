<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.dnjh.spring.ex.mvc.repository.UserRepository">
 	<select id="selectLastUser" resultType="com.dnjh.spring.ex.mvc.domain.User">
 		SELECT
 			`id`
 			, `name`
 			, `yyyymmdd`
 			, `email`
 			, `introduce`
 			, `createdAt`
 			, `updateAt`
 		FROM
 			`new_user`
 		ORDER BY
 			`id` DESC
 		LIMIT 
 			1
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO
 			`new_user`
 		(
 			`name`
 			, `yyyymmdd`
 			, `email`
 			, `introduce`
 		)
 		VALUE
 		(
 			#{name}
 			, #{birthday}
 			, #{email}
 			, #{introduce}
 		)
 	</insert>
 	
 	<insert id="insertUserByObject" parameterType="com.dnjh.spring.ex.mvc.domain.User"
 	useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO
 			`new_user`
 		(
 			`name`
 			, `yyyymmdd`
 			, `email`
 			, `introduce`
 		)
 		VALUE
 		(
 			#{name}
 			, #{yyyymmdd}
 			, #{email}
 			, #{introduce}
 		)
 	</insert>
 </mapper>